    <script>
      // Custom Dialog System
      window.showDialog = function(message, type = 'info', showCancel = false) {
        return new Promise((resolve) => {
          const overlay = document.getElementById('dialog-overlay');
          const dialog = document.getElementById('dialog');
          const titleEl = document.getElementById('dialog-title');
          const bodyEl = document.getElementById('dialog-body');
          const confirmBtn = document.getElementById('dialog-confirm');
          const cancelBtn = document.getElementById('dialog-cancel');

          // Set dialog type class
          dialog.className = 'dialog ' + type;

          // Set title based on type
          const titles = {
            'info': 'Information',
            'success': 'Success',
            'error': 'Error',
            'confirm': 'Confirm'
          };
          titleEl.textContent = titles[type] || 'Dialog';

          // Set message
          bodyEl.textContent = message;

          // Show/hide cancel button
          cancelBtn.style.display = showCancel ? 'block' : 'none';

          // Show dialog
          overlay.classList.add('show');

          // Button handlers
          const handleConfirm = () => {
            overlay.classList.remove('show');
            resolve(true);
            cleanup();
          };

          const handleCancel = () => {
            overlay.classList.remove('show');
            resolve(false);
            cleanup();
          };

          const handleClose = () => {
            overlay.classList.remove('show');
            resolve(false);
            cleanup();
          };

          const cleanup = () => {
            confirmBtn.removeEventListener('click', handleConfirm);
            cancelBtn.removeEventListener('click', handleCancel);
            document.getElementById('dialog-close').removeEventListener('click', handleClose);
            overlay.removeEventListener('click', handleOverlayClick);
          };

          const handleOverlayClick = (e) => {
            if (e.target === overlay) {
              handleCancel();
            }
          };

          confirmBtn.addEventListener('click', handleConfirm);
          cancelBtn.addEventListener('click', handleCancel);
          document.getElementById('dialog-close').addEventListener('click', handleClose);
          overlay.addEventListener('click', handleOverlayClick);
        });
      }

      // Replace alert function
      window.alert = function(message) {
        return showDialog(message, 'info', false);
      };

      // Replace confirm function
      window.confirm = function(message) {
        return showDialog(message, 'confirm', true);
      };

      function confirmSubmission(event) {
        const productSelect = document.getElementById("product_id");
        const selectedOption = productSelect.options[productSelect.selectedIndex];
        const selectedProduct =
          productSelect.options[productSelect.selectedIndex].text;
        const dateInput = document.getElementById("meta_date");
        const productURL = selectedOption.getAttribute("data-url");

        if (!dateInput.value) {
          showDialog("Please select a date.", 'error', false);
          event.preventDefault();
          return;
        }

        // Convert date to timestamp (in seconds)
        const selectedDate = new Date(dateInput.value);
        const timestamp = Math.floor(selectedDate.getTime() / 1000);

        // Put the timestamp into the hidden input
        document.getElementById("meta_timestamp").value = timestamp;

        // Format date for display
        const formattedDate = formatDateInBangkok(timestamp);

        const message =
          `Are you sure you want to add closed date "${formattedDate}"\n` +
          `to product "${selectedProduct}"?`;

        // Use async/await for confirm dialog
        event.preventDefault();
        window.confirm(message).then((confirmed) => {
          if (confirmed) {
            // Submit the form
            event.target.submit();
          }
        });
      }

      function formatDateInBangkok(timestamp) {
        // Convert timestamp (seconds) to milliseconds
        // Timestamp is already in Bangkok time, so no timezone conversion needed
        const date = new Date(timestamp * 1000);
        
        // Format date as DD/MM/YYYY
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const year = date.getFullYear();
        
        return `${day}/${month}/${year}`;
      }

      function toggleDisabledDates(button) {
        const datesList = button.previousElementSibling;
        const isExpanded = datesList.classList.contains('show-all');
        
        if (isExpanded) {
          datesList.classList.remove('show-all');
          const hiddenCount = datesList.querySelectorAll('.disabled-date-item-hidden').length;
          button.textContent = `Show More (${hiddenCount} more)`;
        } else {
          datesList.classList.add('show-all');
          button.textContent = 'Show Less';
        }
      }

      async function fetchDisabledDates(productId) {
        const datesSection = document.getElementById('disabled-dates-section');
        if (!datesSection) return;

        datesSection.innerHTML = `
          <div class="disabled-dates-loading">Loading disabled dates...</div>
        `;

        try {
          const response = await fetch(`/api/product/${productId}/meta`);
          if (!response.ok) throw new Error('Failed to fetch dates');
          
          const data = await response.json();
          const disabledDates = data.disabledDates || [];

          if (disabledDates.length === 0) {
            datesSection.innerHTML = `
              <div class="disabled-dates-label">Disabled Dates</div>
              <div class="disabled-dates-empty">No disabled dates set for this product</div>
            `;
            datesSection.classList.remove('has-dates');
          } else {
            // Sort dates in descending order (most recent first)
            const sortedDates = disabledDates
              .map(ts => parseInt(ts))
              .filter(ts => !isNaN(ts))
              .sort((a, b) => b - a);

            const totalDates = sortedDates.length;
            const showLimit = 5;
            const visibleDates = sortedDates.slice(0, showLimit);
            const hiddenDates = sortedDates.slice(showLimit);
            const hasMore = hiddenDates.length > 0;

            const visibleHTML = visibleDates.map((timestamp, index) => {
              const formattedDate = formatDateInBangkok(timestamp);
              return `
                <div class="disabled-date-item">
                  <span class="date-text">${formattedDate}</span>
                </div>
              `;
            }).join('');

            const hiddenHTML = hiddenDates.map((timestamp, index) => {
              const formattedDate = formatDateInBangkok(timestamp);
              return `
                <div class="disabled-date-item disabled-date-item-hidden">
                  <span class="date-text">${formattedDate}</span>
                </div>
              `;
            }).join('');

            const showMoreButton = hasMore ? `
              <button type="button" class="show-more-button" onclick="toggleDisabledDates(this)">
                Show More (${hiddenDates.length} more)
              </button>
            ` : '';

            datesSection.innerHTML = `
              <div class="disabled-dates-label">Disabled Dates (${totalDates})</div>
              <div class="disabled-dates-list">
                ${visibleHTML}
                ${hiddenHTML}
              </div>
              ${showMoreButton}
            `;
            datesSection.classList.add('has-dates');
          }
        } catch (error) {
          console.error('Error fetching disabled dates:', error);
          datesSection.innerHTML = `
            <div class="disabled-dates-label">Disabled Dates</div>
            <div class="disabled-dates-empty">Error loading dates</div>
          `;
          datesSection.classList.remove('has-dates');
        }
      }

      function truncateURL(url) {
        try {
          const urlObj = new URL(url);
          return '...' + urlObj.pathname + (urlObj.search || '') + (urlObj.hash || '');
        } catch (e) {
          // If URL parsing fails, try to find the path manually
          const match = url.match(/\/\/[^\/]+(\/.*)/);
          if (match) {
            return '...' + match[1];
          }
          return url; // Return original if we can't parse it
        }
      }

      function showProductId() {
        const productSelect = document.getElementById("product_id");
        const selectedOption =
          productSelect.options[productSelect.selectedIndex];
        const productURL = selectedOption.getAttribute("data-url");
        const productId = selectedOption.value;

        // Truncate URL for display
        const displayURL = truncateURL(productURL);

        // Escape HTML and quotes for safe insertion
        const escapedURL = productURL
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;')
          .replace(/"/g, '&quot;')
          .replace(/'/g, '&#39;');
        
        const escapedDisplayURL = displayURL
          .replace(/&/g, '&amp;')
          .replace(/</g, '&lt;')
          .replace(/>/g, '&gt;')
          .replace(/"/g, '&quot;')
          .replace(/'/g, '&#39;');
        
        const escapedURLForJS = productURL
          .replace(/\\/g, '\\\\')
          .replace(/'/g, "\\'")
          .replace(/"/g, '\\"');

        const displayHTML = `
          <div class="url-container">
            <div class="url-label">Product URL</div>
            <div class="url-content">
              <a href="${escapedURL}" target="_blank" class="url-link" rel="noopener noreferrer">
                <span class="url-text">${escapedDisplayURL}</span>
                <button class="copy-button" data-url="${escapedURLForJS}" title="Copy URL">
                  Copy
                </button>
              </a>
            </div>
          </div>
        `;
        
        document.getElementById("product_id_display").innerHTML = displayHTML;

        // Fetch and display disabled dates
        if (productId) {
          fetchDisabledDates(productId);
        }
      }

      function copyToClipboard(text, button) {
        navigator.clipboard.writeText(text).then(() => {
          const originalText = button.innerHTML;
          button.classList.add('copied');
          button.innerHTML = button.innerHTML.replace('ðŸ“‹', 'âœ“').replace('Copy', 'Copied!');
          
          setTimeout(() => {
            button.classList.remove('copied');
            button.innerHTML = originalText;
          }, 2000);
        }).catch(err => {
          console.error('Failed to copy:', err);
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = text;
          textArea.style.position = 'fixed';
          textArea.style.opacity = '0';
          document.body.appendChild(textArea);
          textArea.select();
          try {
            document.execCommand('copy');
            const originalText = button.innerHTML;
            button.classList.add('copied');
            button.innerHTML = button.innerHTML.replace('ðŸ“‹', 'âœ“').replace('Copy', 'Copied!');
            setTimeout(() => {
              button.classList.remove('copied');
              button.innerHTML = originalText;
            }, 2000);
          } catch (err) {
            alert('Failed to copy URL');
          }
          document.body.removeChild(textArea);
        });
      }

      // Handle copy button clicks using event delegation
      document.addEventListener('click', function(e) {
        if (e.target.classList.contains('copy-button') || e.target.closest('.copy-button')) {
          e.preventDefault();
          e.stopPropagation();
          const button = e.target.classList.contains('copy-button') ? e.target : e.target.closest('.copy-button');
          const url = button.getAttribute('data-url') || button.dataset.url;
          if (url) {
            copyToClipboard(url, button);
          }
        }
      });

      // Legacy function - now uses saveToGallery
      async function downloadScreenshot(screenshotPath) {
        await saveToGallery(screenshotPath);
      }

      async function saveToGallery(screenshotPath) {
        try {
          // Check if Web Share API is available (better for mobile)
          if (navigator.share && navigator.canShare) {
            try {
              // Fetch the image as blob
              const response = await fetch(screenshotPath);
              const blob = await response.blob();
              const file = new File([blob], 'date-picker-screenshot.png', { type: 'image/png' });
              
              if (navigator.canShare({ files: [file] })) {
                await navigator.share({
                  files: [file],
                  title: 'Date Picker Screenshot',
                  text: 'Screenshot from Closed Dates Manager'
                });
                return;
              }
            } catch (shareError) {
              // If share fails, fall through to download method
              console.log('Share API not available or cancelled, using download method');
            }
          }
          
          // Fetch the image
          const response = await fetch(screenshotPath);
          const blob = await response.blob();
          
          // Create a canvas to ensure proper image format
          const img = new Image();
          img.crossOrigin = 'anonymous';
          
          const canvas = document.createElement('canvas');
          const ctx = canvas.getContext('2d');
          
          await new Promise((resolve, reject) => {
            img.onload = () => {
              canvas.width = img.width;
              canvas.height = img.height;
              ctx.drawImage(img, 0, 0);
              resolve();
            };
            img.onerror = reject;
            img.src = screenshotPath;
          });
          
          // Convert canvas to blob
          canvas.toBlob((blob) => {
            if (!blob) {
              showDialog('Failed to process image. Try long-pressing the image instead.', 'error', false);
              return;
            }
            
            const blobUrl = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = blobUrl;
            link.download = 'date-picker-screenshot.png';
            link.style.display = 'none';
            
            document.body.appendChild(link);
            link.click();
            
            setTimeout(() => {
              document.body.removeChild(link);
              URL.revokeObjectURL(blobUrl);
            }, 100);
            
            // Show success message
            const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            if (isMobile) {
              showDialog('Image saved! Check your downloads or gallery. You can also long-press the image to save.', 'success', false);
            }
          }, 'image/png');
        } catch (error) {
          console.error('Error saving to gallery:', error);
          const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
          if (isMobile) {
            showDialog('Tap and hold the image to save it to your gallery, or use the Share button in your browser.', 'info', false);
          } else {
            showDialog('Failed to save image. Please try right-clicking the image and selecting "Save image as".', 'error', false);
          }
        }
      }

      function displayScreenshot(screenshotPath) {
        const screenshotSection = document.getElementById('screenshot-section');
        if (!screenshotSection) return;

        // Check if mobile device
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        const saveButtonText = isMobile ? 'Save to Gallery' : 'Download';

        screenshotSection.style.display = 'block';
        screenshotSection.innerHTML = `
          <div class="screenshot-actions">
            <div class="screenshot-label">Date Picker Preview</div>
            <button class="download-button" onclick="saveToGallery('${screenshotPath}')">${saveButtonText}</button>
          </div>
          <div class="screenshot-image-wrapper">
            <img 
              src="${screenshotPath}" 
              alt="Date picker screenshot" 
              class="screenshot-image" 
              onclick="saveToGallery('${screenshotPath}')"
              style="cursor: pointer;"
              loading="lazy"
              onerror="this.parentElement.innerHTML='<div class=\\'screenshot-empty\\'>Failed to load screenshot</div>'"
            >
            ${isMobile ? '<div class="screenshot-hint">ðŸ’¾ Tap image or button to save â€¢ Long-press image for more options</div>' : ''}
          </div>
        `;
        screenshotSection.classList.add('has-image');
        
        // Scroll to screenshot with large offset to show more content above
        setTimeout(() => {
          const elementPosition = screenshotSection.getBoundingClientRect().top + window.pageYOffset;
          // Use viewport height to calculate offset, showing more content above
          const viewportHeight = window.innerHeight;
          const offsetPosition = elementPosition - (viewportHeight * 0.8); // Scroll up to show 80% of viewport above
          window.scrollTo({
            top: Math.max(0, offsetPosition), // Ensure we don't scroll to negative position
            behavior: 'smooth'
          });
        }, 100);
      }

      // Handle dialog messages from server responses
      window.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');
        const type = urlParams.get('type') || 'info';
        const screenshot = urlParams.get('screenshot');
        const productId = urlParams.get('product_id');
        
        if (message) {
          showDialog(decodeURIComponent(message), type, false);
        }

        // Display screenshot if available
        if (screenshot) {
          displayScreenshot(screenshot);
        }

        // Truncate initial URL display if it exists
        const initialUrlText = document.querySelector('#product_id_display .url-text');
        if (initialUrlText) {
          const fullURL = initialUrlText.textContent;
          initialUrlText.textContent = truncateURL(fullURL);
        }

        // Load disabled dates for the first product on page load or selected product
        const productSelect = document.getElementById("product_id");
        if (productSelect && productSelect.options.length > 0) {
          const targetProductId = productId || productSelect.options[0].value;
          if (targetProductId) {
            // Select the product if product_id is in URL
            if (productId) {
              productSelect.value = productId;
              showProductId();
            } else {
              fetchDisabledDates(targetProductId);
            }
          }
        }

        // Clean URL after processing
        if (message || screenshot || productId) {
          const cleanUrl = window.location.pathname;
          window.history.replaceState({}, document.title, cleanUrl);
        }
      });
    </script>
